<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <div class="prototype__detail">
          <p class="detail__title">画像名</p>
          <p class="detail__message">
            <%= @word.name %>
          </p>
      </div>
      <div class="prototype__image">
        <%= image_tag @word.image %>
      </div>
      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title">言語化フォーマット</p>
          <p class="detail__message">
            <%= @word.note %>
          </p>
        </div>
        <%= link_to @word.user.name, "/users/#{@word.user.id}", class: :prototype__user %>
        <% if user_signed_in? && current_user.id == @word.user_id %>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_word_path(@word.id), method: :get, class: :prototype__btn %>
          <%= link_to "削除する", word_path(@word.id), method: :delete, class: :prototype__btn %>
        </div>
        <% end %>
      </div>
      <div class="prototype__comments">
        <%# ログインしているユーザーには以下のコメント投稿フォームを表示する %>
          <% if user_signed_in? %>
            <%= form_with(model: [@word, @comment],local: true) do |f|%>
              <div class="field">
                <%= f.label :text, "コメント" %><br />
                <%= f.text_field :text, id:"comment_text" %>
              </div>
              <div class="actions">
                <%= f.submit "送信する", class: :form__btn  %>
              </div>
            <% end %> 
          <% end %>
        <%# // ログインしているユーザーには上記を表示する %>
        <ul class="comments_lists">
          <%# 投稿に紐づくコメントを一覧する処理を記述する %>
            <% @comments.each do |comment| %>
              <li class="comments_list">
                <%= comment.text%>
                <%= link_to @word.user.name, "/users/#{@word.user_id}", class: :comment_user %>
              </li>
            <% end %>
          <%# // 投稿に紐づくコメントを一覧する処理を記述する %>
        </ul>
      </div>
    </div>
  </div>
</main>
