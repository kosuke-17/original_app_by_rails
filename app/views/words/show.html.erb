<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <div class="prototype__detail">
          <p class="detail__title">画像名</p>
          <p class="detail__message">
            <%= @word.title %>
          </p>
      </div>
      <div class="prototype__image">
        <%= image_tag @word.image %>
      </div>
      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title">言語化フォーマット</p>
          <p class="detail__message">
            <%= @word.note %>
          </p>
        </div>
        <%= link_to @word.user.nickname, "/users/#{@word.user.id}", class: :prototype__user %>
        <% if user_signed_in? && current_user.id == @word.user_id %>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_word_path(@word.id), method: :get, class: :prototype__btn %>
          <%= link_to "削除する", word_path(@word.id), method: :delete, class: :prototype__btn %>
        </div>
        <% end %>
      </div>
      <div class="prototype__comments">
          <% if user_signed_in? %>
            <%= form_with(model: [@word, @comment],local: true) do |f|%>
              <div class="field">
                <%= f.label :text, "コメント" %><br />
                <%= f.text_field :text, id:"comment_text" %>
              </div>
              <div class="actions">
                <%= f.submit "送信する", class: :form__btn  %>
              </div>
            <% end %> 
          <% end %>
        <ul class="comments_lists">
            <% @comments.each do |comment| %>
              <li class="comments_list">
                <%= comment.text%>
                <%= link_to @word.user.nickname, "/users/#{@word.user_id}", class: :comment_user %>
              </li>
            <% end %>
        </ul>
      </div>
    </div>
  </div>
</main>
<footer class="footer">
  <div class="footer-left">
    <%= link_to "ホームへ戻る", root_path %>
  </div>
  <div class="footer-center-left">
    <% if user_signed_in? %>
      <%= link_to "マイページ", "/users/#{current_user.id}" %>
    <% else %>
      <%= link_to "ユーザー一覧ページへ", users_path %>
    <% end %>
  </div>
  <div class="footer-center-right">
     言語化フォーマット
  </div>
  <div class="footer-right">
      <%= link_to "New Post", new_word_path%>
  </div>
</footer>