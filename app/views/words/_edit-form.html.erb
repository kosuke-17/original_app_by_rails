<%= form_with model: word, local: true do |f|%>

  <div class="image-separate">
    <div class="image-left">
      <div class="field">
        <%= f.label :image, "アウトプット画像" %><br />
        <%= f.file_field :image, id:"prototype_image" %>
      </div>

      <div class="field">
        <%= f.label :title, "タイトル" %><br />
        <%= f.text_field :title, id:"prototype_title" %>
      </div>

      <div class="field">
        <%= f.label :note, "アウトプット" %><br />
        <%= f.text_area :note, placeholder: "プレーを言語化しよう", class: :form__text, id:"prototype_catch_copy" %>
      </div>

      <div class="field">
        <%= f.label :genre_id, "ジャンル" %><br />
        <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"select-box", id:"genre-status"}) %>
      </div>
    </div>
    <div class="image-right" id="image-list"></div>
  </div>



  <div class="actions">
    <%= f.submit "編集する", class: :form__btn  %>
  </div>
  <%= link_to '戻る', word_path(word.id), class: :form__btn %>
<% end %>