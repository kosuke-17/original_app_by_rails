<header class="header">
  <div class="inner">
    <div class="nav">
      <div class="nav__left">
        サッカー×Visualizasion
      </div>
      <% if user_signed_in? %>
        <div class="nav__right">
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: :nav__btn %>
          <%= link_to "New Post", new_word_path, class: :nav__btn %>
        </div>
      <% else %>
        <div class="nav__right">
          <%= link_to "ログイン", new_user_session_path, class: :nav__btn %>
          <%= link_to "新規登録", new_user_registration_path, class: :nav__btn %>
        </div>
      <% end %>
    </div>
  </div>
</div>
  <%= form_with(url: search_words_path, local: true, method: :get, class: "search-form") do |form| %>
    <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
    <%= form.submit "検索", class: "search-btn" %>
  <% end %>
</header>
<div class="word__wrapper">
  <% @words.each do |word| %>
    <%= render partial: "word", locals: { word: word } %>
  <% end %>
</div>
<footer>
  <%= link_to "ホームへ戻る", root_path, class: :page_link %>
  <div class="page_link">
    <% if user_signed_in? %>
      <%= link_to "マイページ", "/users/#{current_user.id}" %>
    <% else %>
      <%= link_to "ユーザー一覧ページへ", users_path %>
    <% end %>
  </div>
  <div class="page_link">
     言語化フォーマット
  </div>
  <%= link_to "New Post", new_word_path, class: :page_link %>
</footer>