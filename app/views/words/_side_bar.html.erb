<div class="user-bar">
  <% if user_signed_in? %>
      <h3>~現在、ログイン中~</h3>
    <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: :sign__btn %>
    <%= link_to "マイページ", "/users/#{current_user.id}", class: :sign__btn %>
  <% else %>
    <%= link_to "新規登録", new_user_registration_path, class: :sign__btn %>
    <%= link_to "ログイン", new_user_session_path, class: :sign__btn %>
  <% end %>
    <%= link_to "ユーザー一覧ページへ", users_path, class: :sign__btn %>
  </div>
  <div class="search-bar">
  <h3>~投稿検索~</h3>
  <%= form_with(url: search_words_path, local: true, method: :get, class: "search-form") do |form| %>
    <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
    <%= form.submit "検索", class: "search-btn" %>
  <% end %>

  <h3>~ジャンル検索~</h3>
  <%= search_form_for @p, url: genre_search_words_path do |f| %>
    <%= f.collection_select :genre_id_eq, Genre.all, :id, :name %>
    <%= f.submit '検索' %>
  <% end %>
  <h3>~ユーザー検索~</h3>
  <%= form_with(url: search_users_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "名前を検索する", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>
  言語化フォーマット
</div>