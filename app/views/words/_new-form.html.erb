<%= form_with model: word, local: true do |f|%>

  <div class="image-separate">
    <div class="image-left">
      <div class="field">
        <%= f.label :image, "プロトタイプの画像" %><br />
        <%= f.file_field :image, id:"word_image" %>
      </div>

      <div class="field">
        <%= f.label :title, "画像名" %><br />
        <%= f.text_field :title, id:"word_title" %>
      </div>

      <div class="field">
        <%= f.label :note, "言語化フォーマット" %><br />
        <%= f.text_area :note, class: :form__text, id:"word_note" %>
      </div>

      <div class="field">
        <%= f.label :genre_id, "ジャンル" %><br />
        <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"select-box", id:"genre-status"}) %>
      </div>
    </div>
    <div class="image-right" id="image-list"></div>
  </div>

  <div class="actions">
    <%= f.submit "新規投稿する", class: :form__btn  %>
  </div>

  <%= link_to '戻る', root_path, class: :form__btn %>
<% end %>