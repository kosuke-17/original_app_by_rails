<header>
  <div class="nav">
      FootBall × Visualizasion
  </div>
</div>
</header>
<main>
  <div class="side-bar">
    <%= render "side_bar"%>
    <div class="side-genre"><%# エラー解消してside_barに記載したい%>
      <h3>~ジャンル検索~</h3>
      <%= search_form_for @p, url: genre_search_words_path do |f| %>
        <%= f.collection_select :genre_id_eq, Genre.all, :id, :name %>
        <%= f.submit '検索' %>
      <% end %>
    </div>
  </div>
  <div class="main-bar">
    <%= render "main_bar"%>
  </div>
</main>
<div class="home_icon">
  <a href="/words"><i class="fa fa-home fa-6x"></i></a>
</div>
  <% if user_signed_in? %>
    <div class="new_icon">
      <a href="/words/new"><i class="fas fa-camera fa-6x"></i></a>
    </div>
  <% end %>