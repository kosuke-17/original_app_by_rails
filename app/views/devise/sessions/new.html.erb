
<div class="form__wrapper">
  <h2 class="field_label">ユーザーログイン</h2>
  <%= form_with model: @user, url: new_user_session_path, local: true do |f| %>

    <div class="user-login">
      <div class="field">
        <%= f.label :email, "~メールアドレス~" %><br />
        <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field">
        <%= f.label :password, "~パスワード(6文字以上)~" %><br />
        <%= f.password_field :password, id:"user_password", autocomplete: "current-password" %>
      </div>
    </div>
    <%= f.submit "ログイン", class: :new_post %>
  <% end %>
</div>
<div class="home_icon">
  <a href="/words"><i class="fa fa-home fa-5x"></i></a>
</div>