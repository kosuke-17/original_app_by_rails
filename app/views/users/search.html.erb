<main>
  <div class="side-bar">
    <%= render "words/side_bar"%>
  </div>
  <div class="search-bar">
    <div class="contents row">
      <% @users.each do |user| %>
        <%= render partial: "user", locals: { user: user } %>
      <% end %>
      </div>
  </div>
</main>
<div class="home_icon">
  <a href="/words"><i class="fa fa-home fa-6x"></i></a>
</div>
<% if user_signed_in? %>
  <div class="new_icon">
    <a href="/words/new"><i class="fas fa-camera fa-6x"></i></a>
  </div>
<% end %>