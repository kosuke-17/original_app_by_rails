<main>
  <div class="side-bar">
    <%= render "words/side_bar"%>
  </div>
  <div class="search-bar">
    <% if @users.length !=0 %>
      <%= render partial: "user", locals: { user: @users } %>
    <% else %>
      <div class="search-none">
        <p>該当するニックネームは<br>存在しません</p>
      </div>
    <% end %>
  </div>
</main>
<div class="home_icon">
  <a href="/words"><i class="fa fa-home fa-6x"></i></a>
</div>
<% if user_signed_in? %>
  <div class="new_icon">
    <a href="/words/new"><i class="fas fa-camera fa-6x"></i></a>
  </div>
<% end %>