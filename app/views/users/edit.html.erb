
<div class="form__wrapper">
  <h2 class="field_label">アカウントの編集</h2>
  <%= form_with model: current_user, local: true do |f|%>
    <%= render 'shared/error_messages', model: f.object %>
    <div class="image-separate">
      <div class="user-image-left">
        <div class="field">
          <%= f.label :nickname, "~ニックネーム~" %><br />
          <%= f.text_field :nickname, id:"user_nickname" %>
        </div> 
        <div class="field">
          <%= f.label :name, "~名前~" %><br />
          <%= f.text_field :name, id:"user_name" %>
        </div> 
        
        <div class="field">
          <%= f.label :name_kana, "~フリガナ~" %><br />
          <%= f.text_field :name_kana, id:"user_name_kana" %>
        </div>

        <div class="user-profile">
          <%= f.label :profile, "~プロフィール~" %><br />
          <%= f.text_area :profile, id:"user_profile", class: :form__text %>
        </div>

        <div class="field">
          <%= f.label :job_id, "~職業~" %><br />
          <%= f.collection_select(:job_id, Job.all, :id, :name, {}, {class:"select-box", id:"user_job_id"}) %>
        </div>
        <div class="field">
          <%= f.label :user_image, "~アカウントの画像~" %><br />
          <%= f.file_field :user_image, id:"user_image" %>
        </div>
      </div>
      <div class="user-image-right" id="user-image-list"></div>
    </div>
    <%= f.submit "編集", class: :new_post %>
  <% end %>
</div>
<div class="home_icon">
  <a href="/words"><i class="fa fa-home fa-5x"></i></a>
</div>